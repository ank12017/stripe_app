
<%= form_for @product, html: { multipart: true } do |f| %>
  <p>
    <%= f.label :Brand %><br>
    <%= f.select :brand_id, options_for_select(Brand.all.collect{|b| [b.name, b.id]}), {:prompt => "select brand"}, {} %>
  </p>

  <p><%= f.label :image, "Upload Images:" %>
  <%= f.file_field :image %>
  </p>
  <p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :item %><br>
    <%= f.text_field :item %>
  </p>
  <p>
    <%= f.label :price%><br>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :Discription %><br>
    <%= f.text_area :discription %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>