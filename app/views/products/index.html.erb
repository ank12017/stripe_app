<h1>All product</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Item</th>
    <th>Price</th>
    <th>Discription</th>

  </tr>
 
  <% @product.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.item %></td>
      <td><%= product.price %></td>
      <td><a href="/products/<%= product.id %>">Add to Cart</a></td>
      <td><a href="/products/<%= product.id %>"><%= image_tag product.image.url unless product.image.blank? %></a></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New product', new_product_path %>