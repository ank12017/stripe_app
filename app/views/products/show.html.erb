<p>
  <strong>Brand:</strong>
  <%= @product.brand.name %>
</p>
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>
 
<p>
  <strong>Item:</strong></br>
  <%= @product.item %>
</p>
<p>
  <strong>Price:</strong></br>
  <%= @product.price %>
</p>
 
<p>
  <strong>Discription:</strong>
  <%= @product.discription %>
</p></br>

<p><%= image_tag @product.image.url %></p>

<%= form_for :create_order_items, url: :create_order_items_product, method: :post do |f| %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= f.text_field :quantity %>
  <%= f.submit 'Add to Cart' %>
<% end %>

<p>
<% unless @product.id %>
<%= link_to "Add to Cart", product_path(:product_id => @product.id) %>
 <% else %>
<%= link_to "Go to cart", cart_path(@product) %>
<% end %>
</p>
<%= link_to 'Edit', edit_product_path %>
<%= link_to 'Back', products_path %>
<%= link_to 'Destroy', @product, :confirm => 'Are you sure?', :method => :delete %> 


